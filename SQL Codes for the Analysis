SELECT 
   o.order_id, o.order_date, c.customer_id, 
   c.first_name ||'  '|| c.last_name, p.product_name,
   s.rep_name 
FROM products p
INNER JOIN orders o
ON p.product_id = o.product_id
INNER JOIN customers c
ON o.customer_id = c.customer_id
INNER JOIN sales_reps s
ON c.sales_rep_id = s.sales_rep_id
ORDER BY o.order_date;

